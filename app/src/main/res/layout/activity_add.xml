<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/add_tv_petTypeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:text="동물 종류"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/add_tv_petTypePrint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="고양이"
        android:enabled="false"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/add_btn_petTypeSelect"
        app:layout_constraintStart_toStartOf="@+id/add_tv_petTypeTitle"
        app:layout_constraintTop_toBottomOf="@+id/add_tv_petTypeTitle" />

    <Button
        android:id="@+id/add_btn_petTypeSelect"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:layout_marginEnd="32dp"
        android:text="변경"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/add_tv_petTypePrint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/add_tv_petTypePrint" />

    <TextView
        android:id="@+id/add_tv_petNameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:textSize="16sp"
        android:text="동물 이름"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_tv_petTypePrint" />

    <EditText
        android:id="@+id/add_et_petNameInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:text="별이"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/add_tv_petNameTitle"
        app:layout_constraintTop_toBottomOf="@+id/add_tv_petNameTitle" />

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_et_petNameInput"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="15dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/add_cv_tv_settingTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="설정"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/add_cv_tv_settingPeriod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="배식 주기"
                app:layout_constraintStart_toStartOf="@+id/add_cv_tv_settingTitle"
                app:layout_constraintTop_toBottomOf="@+id/add_cv_tv_settingTitle" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"
                android:text="아침 점심 저녁"
                android:textSize="13sp"
                android:enabled="false"
                app:layout_constraintBottom_toBottomOf="@+id/add_cv_tv_settingPeriod"
                app:layout_constraintEnd_toStartOf="@+id/add_cv_btn_settingPeriod"
                app:layout_constraintStart_toEndOf="@+id/add_cv_tv_settingPeriod"
                app:layout_constraintTop_toTopOf="@+id/add_cv_tv_settingPeriod" />

            <Button
                android:id="@+id/add_cv_btn_settingPeriod"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:textSize="13sp"
                android:text="변경"
                app:layout_constraintBottom_toBottomOf="@+id/add_cv_tv_settingPeriod"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/add_cv_tv_settingPeriod"/>

            <TextView
                android:id="@+id/add_cv_tv_settingDefaultValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="기본값 설정"
                app:layout_constraintStart_toStartOf="@+id/add_cv_tv_settingTitle"
                app:layout_constraintTop_toBottomOf="@+id/add_cv_tv_settingPeriod" />

            <Switch
                android:id="@+id/add_cv_swh_settingDefaultValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/add_cv_tv_settingDefaultValue"
                app:layout_constraintEnd_toStartOf="@+id/add_cv_btn_settingDefaultValue"
                app:layout_constraintTop_toTopOf="@+id/add_cv_tv_settingDefaultValue" />

            <Button
                android:id="@+id/add_cv_btn_settingDefaultValue"
                android:layout_width="20dp"
                android:layout_height="30dp"
                app:layout_constraintBottom_toBottomOf="@+id/add_cv_swh_settingDefaultValue"
                app:layout_constraintEnd_toEndOf="@+id/add_cv_btn_settingPeriod"
                app:layout_constraintTop_toTopOf="@+id/add_cv_swh_settingDefaultValue" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>